<% end %>

<% if nil %>
<p>by <%= display_post_author(@post) %> (<%= link_to "Edit Post", edit_post_path(@post) %>)</p>
<% end %>

<p>by <%= display_post_author(@post) %> (<%= link_to "Edit Post", edit_author_post_path(@post.author, @post) if @post.author %>)</p>
